    max-width: 197px;
    left: 88px;
    top: 49px;
    font-weight: 500;
    font-size: 30px;
    line-height: 100%;
    letter-spacing: 0px;
    font-family: 'Jost', sans-serif;
    vertical-align: middle;
    margin: 0;
  }
  .banner-para-desktop {

            >
          </a>
        {% else %}
          <a href="{{ routes.root_url }}" class="navbar-shop-name">{{ shop.name }}</a>
        {% endif %}
      </div>
      <p class="navbar-content-text">{{ section.settings.content }}</p>
      <a
        href="{{ section.settings.button_link | default: '#' }}"
        class="gift-button navbar-gift-btn"
      >
        <div class="gift-button-content navbar-gift-btn-inner">
          <span class="navbar-gift-btn-text">{{ section.settings['btn-text'] }}</span>
          <svg

  .banner-para-mobile {
    position: absolute;
    display: block;
    max-width: 340px;
    left: 16px;
    font-weight: 400;
    font-size: 16px;
    text-align: center;
    color: black;
    line-height: 130%;
    letter-spacing: 0px;
    font-family: 'Jost', sans-serif;
    top: 103px;
    margin: 0;
  }
  .banner-cta-btn {
    position: absolute;
    max-width: 193px;
    height: 45px;
    top: 330px;
    left: 90px;
    display: flex;
    align-items: center;
    background-color: black;
    color: white;
    padding: 13px 40px;
    font-family: 'Jost', sans-serif;
    font-size: 16px;
    line-height: 20.48px;
    letter-spacing: 0px;
    text-transform: uppercase;
    gap: 10px;
    z-index: 10;
    border: none;
    cursor: pointer;
  }

  .banner-cta-btn {
    background-color: black;
    color: white;
  }

  .banner-cta-btn::before {
    background: #fff544;
  }

  .banner-cta-btn:hover .gift-button-content {
    color: black;
  }

  .banner-cta-btn:hover svg path {
    fill: black;
  }

  .banner-image-1-wrap {
    max-width: 686px;
    position: absolute;
    top: 157px;
    overflow: hidden;
  }
  .banner-image-1 {
    width: 100%;
    height: 264px;
    object-fit: cover;
    object-position: center;
  }
  .banner-image-2-wrap {
    display: none;
  }
  .banner-image-2 {
    max-width: 890px;
  }

  .btm-para-desktop {
    display: none;
    max-width: 375px;
    margin-left: auto;
    margin-right: auto;
    background-color: #f5f5f5;
    padding: 0.5rem 0;
    text-align: center;
    font-size: 16px;
    line-height: 20.48px;
    text-transform: uppercase;
  }
  .btm-para-mobile {
    display: block;
    max-width: 375px;
    margin-left: auto;
    margin-right: auto;
    background-color: #f5f5f5;
    padding: 0.5rem 0;
    text-align: center;
    font-size: 16px;
    line-height: 20.48px;
    text-transform: uppercase;
  }

  @media (min-width: 768px) {
    .navbar-desktop {
      display: block;
    }
    .navbar-mobile {
      display: none;
    }
    .banner-section {
      max-width: 1440px;
    }
    .banner-container {
      max-width: 1440px;
      min-height: 0;
    }
    .banner-heading {
      max-width: 459px;
      left: 67px;
      top: 414px;
      font-size: 70px;
    }
    .banner-para-desktop {
      display: block;
      max-width: 489px;
      left: 67px;
      font-size: 20px;
      line-height: 140%;
      top: 534px;
    }
    .banner-para-mobile {
      display: none;
    }
    .banner-cta-btn {
      max-width: 220px;
      height: 50px;
      top: 668px;
      left: 67px;
      padding: 12px 45px;
    }

    .banner-image-1-wrap {
      position: relative;
      top: 0;
      max-width: 1440px;
    }
    .banner-image-1 {
      width: 100%;
      height: auto;
    }
    .banner-image-2-wrap {
      display: flex;
      justify-content: flex-end;
      align-items: flex-end;
      margin-left: auto;
      margin-right: auto;
    }
    .btm-para-desktop {
      display: block;
      max-width: 1440px;
    }
    .btm-para-mobile {
      display: none;
      max-width: 1440px;
    }
  }
</style>
<section class="banner-navbar" style="background-color: {{ section.settings.navbar_bg_color }};" id="navbar">

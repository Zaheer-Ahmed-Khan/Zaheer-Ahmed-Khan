<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const navbar = document.getElementById('navbar');
  let isOpen = false;
  menuBtn.addEventListener('click', () => {
    isOpen = !isOpen;
    mobileMenu.classList.toggle('open');
    menuBtn.classList.toggle('active');
    navbar.classList.toggle('navbar-shadow');
    document.querySelector('.hamburger-icon').classList.toggle('show');
    document.querySelector('.close-icon').classList.toggle('show');
  });

  document.addEventListener('click', (e) => {
    if (isOpen && !navbar.contains(e.target)) {
      closeMenu();
    }
  });
  function closeMenu() {
    isOpen = false;
    mobileMenu.classList.remove('open');
    menuBtn.classList.remove('active');
    navbar.classList.remove('navbar-shadow');
    document.querySelector('.hamburger-icon').classList.add('show');
    document.querySelector('.close-icon').classList.remove('show');
  }
</script>
